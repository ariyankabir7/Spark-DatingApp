<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <!-- Global action to Auth (usable from anywhere) -->
    <action
        android:id="@+id/action_global_to_authFragment"
        app:destination="@id/authFragment"
        app:popUpTo="@id/nav_graph"
        app:popUpToInclusive="true" />

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.ariyan.spark.ui.splash.SplashFragment"
        android:label="Splash">
        <action android:id="@+id/action_splash_to_auth" app:destination="@id/authFragment"/>
        <action android:id="@+id/action_splash_to_interests" app:destination="@id/interestsFragment"/>
        <action android:id="@+id/action_splash_to_home" app:destination="@id/homeFragment"/>
    </fragment>

    <fragment
        android:id="@+id/authFragment"
        android:name="com.ariyan.spark.ui.auth.AuthFragment"
        android:label="Auth">
        <action android:id="@+id/action_auth_to_interests" app:destination="@id/interestsFragment"/>
        <action android:id="@+id/action_auth_to_home" app:destination="@id/homeFragment"/>
    </fragment>

    <fragment
        android:id="@+id/interestsFragment"
        android:name="com.ariyan.spark.ui.interest.InterestsFragment"
        android:label="Interests">
        <action android:id="@+id/action_interests_to_home" app:destination="@id/homeFragment"/>
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.ariyan.spark.ui.home.HomeFragment"
        android:label="Home" >
        <!-- This hosts the bottom nav graph -->
        <navGraph android:value="@navigation/home_bottom_nav_graph" />
    </fragment>

</navigation>
