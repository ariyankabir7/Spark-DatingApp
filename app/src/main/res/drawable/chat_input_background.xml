<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Soft white background (surface) -->
    <solid android:color="@color/surface" />

    <!-- Rounded corners -->
    <corners android:radius="24dp" />

    <!-- Subtle stroke for modern feel -->
    <stroke
        android:width="1dp"
        android:color="@color/secondary" />

    <!-- Small padding inside shape (optional if TextInputEditText already has padding) -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp" />

</shape>
